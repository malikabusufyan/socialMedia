<link rel="stylesheet" href="/css/layout.css">
<li id="comments-li">
    <p>
        <% if (locals.user && locals.user.id==comment.user.id) { %>
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>"><i
                        class="bi bi-x-square-fill"></i></a>
            </small>

            <%} %>

                <%= comment.content %>
                    <br>

                    <% if (comment.user) { %>
                        <small>
                            <%= comment.user.name %>
                        </small>
                        <% } %>
    </p>
</li>