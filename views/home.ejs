<link rel="stylesheet" href="/css/user_profile.css">
<h1>
    Codeial <%= title %>
</h1>

<section id="feed-posts">
    <h4>Post</h4>
    <% if(locals.user){%>
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" col="30" rows="3" placeholder="Express Your Thoughts" required></textarea>
            <input type="submit" value="post">
        </form>
        <%} %>

            <div id="posts-list-container">
                <ul>
                    <% for (post of posts){ %>
                        <!-- Partial for Post -->
                        <%- include('_post') -%>

                            <%} %>
                </ul>
            </div>
</section>